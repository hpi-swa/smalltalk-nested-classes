paneColor	| cc |	(cc := self valueOfProperty: #paneColor) ifNotNil: [^cc].	Display depth > 2 		ifTrue: 			[model ifNotNil: 					[model isInMemory 						ifTrue: 							[cc := Color colorFrom: model defaultBackgroundColor]].	cc ifNil: [cc := paneMorphs isEmptyOrNil ifFalse: [paneMorphs first color]]].	cc ifNil: [cc := self defaultBackgroundColor].	self paneColor: cc.	^cc